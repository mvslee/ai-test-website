# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/ai_marketing"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"

# WeChat Configuration
WECHAT_APP_ID="your-wechat-app-id"
WECHAT_APP_SECRET="your-wechat-app-secret"

# Social Media API Keys
XIAOHONGSHU_API_KEY="your-xiaohongshu-api-key"
XIAOHONGSHU_API_SECRET="your-xiaohongshu-api-secret"

WEIBO_API_KEY="your-weibo-api-key"
WEIBO_API_SECRET="your-weibo-api-secret"

DIANPING_API_KEY="your-dianping-api-key"
DIANPING_API_SECRET="your-dianping-api-secret"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760 # 10MB

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password"

# AI Service Configuration (for content generation)
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# CDN Configuration
CDN_URL="https://your-cdn-domain.com"
CLOUD_STORAGE_BUCKET="ai-marketing-assistant" 